{% extends 'SalleAdminBundle:Front:base.html.twig' %}

{% block title %}Resultados de búsqueda{% endblock %}

{% block content %}

<!-- Header -->
<div class="mainmenu-wrapper">
	{% include 'SalleAdminBundle:Front:header.html.twig' with {'active' : 'buscar'} %}
</div>

<!-- Page Title -->
<div class="section section-breadcrumbs">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h1>Búsqueda</h1>
			</div>
		</div>
	</div>
</div>

<div class="section">
	<div class="container">
		<div class="row">

			<div class="col-sm-6">
				<h3>Busca en la web</h3>
				<form>
					<div class="input-group">
						<input class="form-control input-md" id="appendedInputButtons" type="text">
						<span class="input-group-btn">
							<button class="btn btn-md" type="button">Buscar</button>
						</span>
					</div>
				</form>
				<p>&nbsp;</p>
				<p>&nbsp;</p>
			</div>

			<div class="col-md-12">
				<h3>Resultados de la búsqueda</h3>
				<h5><i>5 resultados</i></h5>
				<table class="shopping-cart">
					<!-- Shopping Cart Item -->
					{% for i in 1..5 %}
