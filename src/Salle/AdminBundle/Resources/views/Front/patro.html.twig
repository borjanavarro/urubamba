{% extends 'SalleAdminBundle:Front:base.html.twig' %}

{% block title %}Radio en vivo{% endblock %}

{% block content %}

<!-- Header -->
<div class="mainmenu-wrapper">
	{% include 'SalleAdminBundle:Front:header.html.twig' with {'active' : 'patrocinadores'} %}
</div>

<!-- Page Title -->
<div class="section section-breadcrumbs">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h1>Patrocinadores</h1>
			</div>
		</div>
	</div>
</div>

<div class="section">
    <div class="container">
        <div class="row">
            {% for patro in patros %}
        		<div class="col-md-4 col-sm-6">
        			<div class="service-wrapper" style="height:300px;">
            			<img src="{{ asset ('bundles/salleadmin/img/patrocinadores/' ~ patro.id ~ '.' ~ patro.path )}}" alt="Service Name">
            			<h3>{{ patro.titulo | truncate(50) }}</h3>
            			<p>{{ patro.descripcion | truncate(100) }}</p>
            		</div>
        		</div>
            {% endfor %}
        </div>
    </div>
</div>

<!-- Footer -->
<div class="footer">
	{% include 'SalleAdminBundle:Front:footer.html.twig' %}
</div>

{% endblock %}
