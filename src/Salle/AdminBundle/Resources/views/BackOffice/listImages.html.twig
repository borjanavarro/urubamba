{% extends 'SalleAdminBundle:BackOffice:base.html.twig' %}

{% block title %}Galeria{% endblock %}

{% block content %}

<div id="wrapper">

	{% include 'SalleAdminBundle:BackOffice:header.html.twig'  with { 'active' : 'galeria'} %}

	<div id="page-wrapper">

		<div class="row">
			<div class="col-lg-12">
				<h1>Lista de imagenes <small>Urubamaba</small></h1>
			</div>
		</div><!-- /.row -->

		<div class="row">
			{% for imagen in imagenes %}
				<div class="col-lg-4" style="margin-top:15px;">
					<img src="{{ asset ('bundles/salleadmin/img/galeria/' ~ imagen.id ~ '.' ~ imagen.path)}}" style="max-height:206px;" alt="Project Name" class="img-rounded center-block">
					<div class="row">
						<h3 class="text-center">{{ imagen.titulo }}</h3>
						<p class="text-center">{{ imagen.descripcion | truncate(100) }}</p>
						<form name="form_delete"  method="post" class="text-center">
							<button class="btn btn-danger btn-sm" type="submit" name="delete" value="{{ imagen.id}}">Eliminar</button>
						</form>
					</div>
				</div>
			{% endfor %}
		</div>

		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="bs-example center-block">
					<ul class="pagination">
						<li class="disabled"><a href="#">&laquo;</a></li>
						<li class="active"><a href="#">1</a></li>
						<li><a href="#">2</a></li>
						<li><a href="#">3</a></li>
						<li><a href="#">4</a></li>
						<li><a href="#">5</a></li>
						<li><a href="#">&raquo;</a></li>
					</ul>
				</div>
			</div>
		</div><!-- /.row -->

	</div><!-- /#page-wrapper -->

</div><!-- /#wrapper -->

{% endblock %}